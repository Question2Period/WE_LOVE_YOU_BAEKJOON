import java.io.*;
import java.util.*;
public class BaekJoon2439 {

	public static void main(String[] args) throws IOException{
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		int N = Integer.parseInt(br.readLine());
		int flag = 0;
			for(int j=0;j<N-1;j++) {
				System.out.print(" ");
				flag++;
				for(int k=N;k<N-1;k--) {
					System.out.print("*");
					flag++;
				}
				if(flag==3) {
					System.out.println();
					flag=0;
				}
			}
	

			System.out.println();
		}
	}

