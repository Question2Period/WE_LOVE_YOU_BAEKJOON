import java.io.*;
import java.util.*;
public class BaekJoon1546 {

	public static void main(String[] args) throws IOException{
		BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
		int N = br.read();
		int max=0;
		int sum=0;
		int arr[]=new int[N];
		for(int i=0;i<N;i++) {
			arr[i]=br.read();
			if(arr[i]>max) {
				max=arr[i];
			}
		}
		for(int i=0;i<N;i++) {
			arr[i]=arr[i]/max*100;
			sum += arr[i];
		}
		System.out.println((double)(sum/N));
	}

}
